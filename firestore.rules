rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // User Profiles Collection
    // Users can read/write their own profile
    // userId in path must match authenticated user's uid
    match /userProfiles/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Transactions Collection
    // Users can read/write transactions (more permissive for development)
    match /transactions/{transactionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
    }
    
    // CV Drafts Collection (Legacy - top-level)
    // Users can read/write their own CV drafts
    match /cvs/{cvId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow delete: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
    }
    
    // Drafts Sub-collection: /drafts/{userId}/cvs/{cvId}
    // Users can only access their own drafts sub-collection
    match /drafts/{userId}/cvs/{cvId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Drafts Collection: Allow users to create their own draft document
    // This is needed to create the parent document before adding sub-collections
    match /drafts/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

